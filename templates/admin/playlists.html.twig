{% extends "baseback.html.twig" %}

{% block admin_content %}
    <h3>Gestion des Playlists</h3>
    <p>Cette page affichera la liste des playlists.</p>

    <a href="{{ path('admin_playlists_add') }}" class="btn btn-success mb-3">+ Ajouter une playlist</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Playlist
                <a href="{{ path('admin_playlists_sort', {champ:'name', ordre:'ASC'}) }}" class="btn btn-info btn-sm">▲</a>
                <a href="{{ path('admin_playlists_sort', {champ:'name', ordre:'DESC'}) }}" class="btn btn-info btn-sm">▼</a>
            </th>
            <th>Nombre de formations</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for playlist in playlists %}
            <tr>
                <td>{{ playlist.name }}</td>
                <td>{{ playlist.formations|length }}</td>
                <td>
                    <a href="{{ path('admin_playlists_edit', {id: playlist.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="{{ path('admin_playlists_delete', {id: playlist.id}) }}" class="btn btn-danger btn-sm"
                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette playlist ?');">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
