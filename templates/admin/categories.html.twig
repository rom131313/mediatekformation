{% extends "baseback.html.twig" %}

{% block admin_content %}
    <h3>Gestion des Catégories</h3>
    <p>Cette page affichera la liste des catégories.</p>

    {# Formulaire d'ajout rapide #}
    <form method="POST" action="{{ path('admin_categories_add') }}" class="mb-3">
        <div class="input-group">
            <input type="text" name="name" class="form-control" placeholder="Nouvelle catégorie" required>
            <button type="submit" class="btn btn-success">Ajouter</button>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.name }}</td>
                <td>
                    {% if categorie.formations is empty %}
                        <a href="{{ path('admin_categories_delete', {id: categorie.id}) }}" class="btn btn-danger btn-sm"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">Supprimer</a>
                    {% else %}
                        <button class="btn btn-secondary btn-sm" disabled>Supprimer</button>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
